{
    "name": "owasp-cisa-security-scanner",
    "displayName": "OWASP CISA Security Scanner",
    "description": "Scans code for potential security vulnerabilities based on OWASP Top Ten, OWASP LLM Top 10, and CISA Secure by Design principles",
    "version": "0.1.0",
    "publisher": "Aegisq",
    "galleryBanner": {
        "color": "#1f1f1f",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Linters",
        "Other"
    ],
    "keywords": [
        "security",
        "owasp",
        "cisa",
        "vulnerability",
        "scanner",
        "static-analysis",
        "ai",
        "llm",
        "genai",
        "machine-learning"
    ],
    "activationEvents": [
        "onLanguage:javascript",
        "onLanguage:typescript",
        "onLanguage:python",
        "onLanguage:java",
        "onLanguage:csharp",
        "onLanguage:php",
        "onLanguage:ruby",
        "onLanguage:go",
        "onLanguage:cpp",
        "onLanguage:c"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "owaspCisaScanner.scanCurrentFile",
                "title": "Scan for Security Issues",
                "category": "OWASP/CISA"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "owaspCisaScanner.scanCurrentFile",
                    "group": "1_modification",
                    "when": "editorTextFocus"
                }
            ],
            "commandPalette": [
                {
                    "command": "owaspCisaScanner.scanCurrentFile",
                    "when": "editorIsOpen"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "OWASP/CISA Scanner Configuration",
            "properties": {
                "owaspCisaScanner.enableAutoScan": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically scan files on save"
                },
                "owaspCisaScanner.maxFileSize": {
                    "type": "number",
                    "default": 5242880,
                    "minimum": 1024,
                    "maximum": 52428800,
                    "description": "Maximum file size to scan (bytes)"
                },
                "owaspCisaScanner.enableHighSeverityOnly": {
                    "type": "boolean",
                    "default": false,
                    "description": "Only show high severity vulnerabilities"
                },
                "owaspCisaScanner.excludePatterns": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "description": "Additional file/folder patterns to exclude from scanning (glob patterns)"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "webpack",
        "watch": "webpack --watch",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts --fix",
        "lint:check": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "security-audit": "npm audit --audit-level moderate",
        "security-check": "npm run security-audit && npm run lint:check"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "16.x",
        "@types/vscode": "^1.74.0",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "@vscode/test-electron": "^2.2.0",
        "eslint": "^8.28.0",
        "glob": "^8.0.3",
        "mocha": "^10.1.0",
        "ts-loader": "^9.4.1",
        "typescript": "^4.9.4",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/JeffGrayson1969/owasp-cisa-security-scanner.git"
    },
    "bugs": {
        "url": "https://github.com/JeffGrayson1969/owasp-cisa-security-scanner/issues"
    },
    "license": "MIT"
}
